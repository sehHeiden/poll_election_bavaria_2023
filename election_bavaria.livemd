bavarian_location_in_note =
  person_df["cleaned_note"]
  |> S.to_list()
  |> Enum.map(fn x ->
    is_scanned =
      Enum.map(local_entities, fn y ->
        scanned = Regex.run(Regex.compile!("\\b#{y}\\b"), x)
        if is_nil(scanned), do: 0, else: 1
      end)

    Enum.sum(is_scanned)
  end)
  |> Enum.map(&if(&1 > 0, do: true, else: false))

person_df = DF.put(person_df, "bavarian_location_in_note", bavarian_location_in_note)
